{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "journey",
	"version": "0.0.0",
	"identifier": "com.cykreet.journey",
	"build": {
		"beforeDevCommand": "bun run dev:web",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build:web",
		"frontendDist": "../dist",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"title": "journey",
				"width": 1200,
				"height": 600
			}
		],
		"security": {
			"csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
			"assetProtocol": {
				"enable": true,
				"scope": ["$APPLOCALDATA/**/*"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"createUpdaterArtifacts": true,
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVGMDIzMjI3MUFDOEI1MDkKUldRSnRjZ2FKeklDNzhyWWtZVWtTeHF6RHdRMGRyT2NtdDJzVmJyUXYzZ3daM1ZJbjVTMUlxelcK",
			"endpoints": ["https://github.com/cykreet/journey/releases/download/latest/latest.json"]
		}
	}
}
