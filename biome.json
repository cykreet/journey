{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "warn",
				"useShorthandFunctionType": "warn",
				"useImportType": "warn",
				"useEnumInitializers": "off",
				"useConst": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noDoubleEquals": "off",
				"noConfusingVoidType": "off",
				"noAssignInExpressions": "off"
			},
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double"
		}
	}
}
